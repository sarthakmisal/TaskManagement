backend/
├── server.js                 # Entry point
├── .env                      # DB_URI, JWT_SECRET, etc.
├── config/
│   └── db.js                 # MongoDB connection
├── models/
│   ├── User.js               # name, email, password, role
│   ├── Team.js               # name, members[]
│   └── Task.js               # title, desc, dueDate, priority, assignedTo, createdBy
├── routes/
│   ├── authRoutes.js         # /auth/register, /auth/login
│   ├── taskRoutes.js         # CRUD tasks
│   └── teamRoutes.js         # GET/POST teams
├── controllers/
│   ├── authController.js     # register, login logic
│   ├── taskController.js     # task CRUD
│   └── teamController.js     # team logic
├── middleware/
│   ├── authMiddleware.js     # JWT verify
│   └── validation.js         # express-validator rules
└── package.json
